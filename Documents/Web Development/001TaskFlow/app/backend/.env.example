# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database Configuration
# SECURITY: DB_PASSWORD is REQUIRED - never use default passwords in production
# For local development
DB_HOST=localhost
DB_PORT=5432
DB_NAME=taskflow
DB_USER=postgres
DB_PASSWORD=YOUR_SECURE_DATABASE_PASSWORD_HERE

# For Docker Compose
# DB_HOST=postgres
# DB_PORT=5432
# DB_NAME=taskflow
# DB_USER=taskflow_user
# DB_PASSWORD=YOUR_SECURE_DATABASE_PASSWORD_HERE

# JWT Configuration
# SECURITY: JWT_SECRET is REQUIRED - generate using: openssl rand -base64 64
# Never commit your actual JWT secret to version control
JWT_SECRET=YOUR_SECURE_JWT_SECRET_HERE
JWT_EXPIRE=7d

# Demo/Seed User Password (optional - only used when running seed script)
# Default: ChangeMe123! (if not set)
DEMO_PASSWORD=SecureDemo123!

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
